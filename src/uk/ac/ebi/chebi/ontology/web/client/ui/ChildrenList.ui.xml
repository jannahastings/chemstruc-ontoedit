<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.google.gwt.user.cellview.client'
             xmlns:o="urn:import:uk.ac.ebi.chebi.ontology.web.client.ui">
    <ui:style>
        .scrollable {
            height: 100%;
            width: 100%;
            border: 1px solid #ccc;
            text-align: left;
        }

        .contactFormCell {
            padding-left: 20px;
        }
    </ui:style>

    <g:HTMLPanel>
        <o:ShowMorePagerPanel
                addStyleNames='{style.scrollable}'
                ui:field='pagerPanel'/>
    </g:HTMLPanel>
</ui:UiBinder>