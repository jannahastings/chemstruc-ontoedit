<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:o="urn:import:uk.ac.ebi.chebi.ontology.web.client.ui">
    <ui:style>
        .part {
            border: solid 1px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="EM">
        <g:west size="20">
            <g:SimplePanel addStyleNames="margin-5px" ui:field="westPanel">
            </g:SimplePanel>
        </g:west>
        <g:center>
            <g:ScrollPanel>
                <g:HTMLPanel >
                    <p>Class Id: <g:Label ui:field="lbId" width="10em" />
                        Class Name:
                        <g:Label ui:field="lbName" width="20em"/>
                    </p>
                    <p>Text Definition: <g:Label ui:field="lbTextDefinition" /></p>
                    <h2>Skeleton</h2>
                    <p>
                        <o:JCPWidget ui:field="jcpWidget"/>
                    </p>
                    <p>
                        <g:Button ui:field="btSave">Save</g:Button>
                        <g:Button ui:field="btPreview">Preview</g:Button>
                    </p>
                </g:HTMLPanel>
            </g:ScrollPanel>
        </g:center>

    </g:DockLayoutPanel>
</ui:UiBinder>