<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:o="urn:import:uk.ac.ebi.chebi.ontology.web.client.ui">
    <ui:style>
        .part {
            border: solid 1px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="EM">
        <g:west size="15">
            <g:HTMLPanel addStyleNames="margin-5px">
                <p>Class Id:</p>
                <g:TextBox ui:field="tbId" enabled="false" width="14em"></g:TextBox>
                <p>Class Name:</p>
                <g:TextBox ui:field="tbName" width="14em"></g:TextBox>
                <p>Comment:</p>
                <g:TextArea ui:field="taComment" width="14em" height="20em"></g:TextArea>
            </g:HTMLPanel>
        </g:west>
        <g:center>
            <g:VerticalPanel addStyleNames="margin-5px">
                <g:HTMLPanel styleName="{style.part}">
                    <h2>Skeleton</h2>
                    <p>
                        <o:JCPWidget ui:field="jcpWidget"/>
                    </p>
                </g:HTMLPanel>
            </g:VerticalPanel>
        </g:center>
        <g:south size="5">
            <g:HTMLPanel>
                <p>
                    <g:Button ui:field="btSave">Save</g:Button>
                    <g:Button ui:field="btPreview">Preview</g:Button>
                </p>
            </g:HTMLPanel>
        </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder>